# PCParts Backend Configuration
# Copy to .env and customize

# Database (SQLite for dev, PostgreSQL for production)
PCPARTS_DATABASE_URL=sqlite+aiosqlite:///./pcparts.db
# PCPARTS_DATABASE_URL=postgresql+asyncpg://user:pass@localhost/pcparts

# Debug mode
PCPARTS_DEBUG=false

# Scraping settings
PCPARTS_SCRAPE_INTERVAL_MINUTES=60
PCPARTS_MAX_CONCURRENT_SCRAPERS=5
PCPARTS_REQUEST_TIMEOUT_SECONDS=30

# Price alerts
PCPARTS_PRICE_DROP_THRESHOLD_PERCENT=5.0
